---
import { getCollection } from "astro:content";
import MainLayout from "../layouts/MainLayout.astro";
import BlogPost from "../components/BlogPost.astro";
import { siteConfig } from "../config/site-config.ts";

const blogPosts = await getCollection(
	"blog",
	(post) => post.data.isDraft === false,
);
---

<MainLayout title={siteConfig.name}>
	<!-- component -->
	<section class="">
		<div class="container px-6 py-10 mx-auto">
			<h1 class="text-3xl font-semibold text-white">
				{siteConfig.name}
			</h1>

			<a href="/blog/1" class="text-blue-500 hover:underline"> Blogs </a>
			<a href="/authors" class="text-blue-500 hover:underline ml-4">
				Autores
			</a>

			<div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
				{blogPosts.map((post) => <BlogPost post={post} />)}
			</div>
		</div>
	</section>
</MainLayout>
