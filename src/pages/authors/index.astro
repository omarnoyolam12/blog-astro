---
import { getCollection } from "astro:content";

import MainLayout from "src/layouts/MainLayout.astro";
import AuthorCard from "src/components/AuthorCard.astro";

const authors = await getCollection("author");
---

<MainLayout title="Listado de autores">
    <div class="container px-6 py-10 mx-auto">
        <h1 class="text-3xl font-semibold text-white">Autores</h1>

        <a href="/" class="text-blue-500 hover:underline"> Blogs </a>

        <section class="mt-10 grid grid-cols-1 sm:grid-cols-2 gap-10">
            {authors.map((author) => <AuthorCard author={author} />)}
        </section>
    </div>
</MainLayout>
